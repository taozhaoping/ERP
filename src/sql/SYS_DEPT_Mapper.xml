<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="M_Dept">
	<resultMap id="T_Dept" type="Dept">
		<id column="ID" property="id" />
		<result column="DEPT_NAME" property="deptName" jdbcType="VARCHAR" />
		<result column="ENTERPRISE_ID"  property="enterpriseID" />
		<result column="TYPE" property="type" />
		<result column="enabled" property="enabled" />
	</resultMap>
	<sql id="Base_Column_List">
		ID, DEPT_NAME, ENTERPRISE_ID,TYPE ,enabled
	</sql>
	<sql id="where">
		<where>
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="deptName != null">
				and DEPT_NAME = #{deptName,jdbcType=VARCHAR}
			</if>
			<if test="enterpriseID != null">
				and ENTERPRISE_ID = #{enterpriseID}
			</if>
			<if test="type != null">
				and TYPE = #{type}
			</if>
			<if test="enabled != null">
				and enabled = #{enabled}
			</if>
		</where>
	</sql>
	
	<select id="select" resultMap="T_Dept" parameterType="Dept">
		select
		<include refid="Base_Column_List" />
		from SYS_DEPT
		<include refid="where" />
	</select>
	
	<select id="list" resultMap="T_Dept" parameterType="Dept">

		select
		<include refid="Base_Column_List" />
		from SYS_DEPT
		<include refid="where" />
		<if test="orderByClause != null">
			order by ${orderByClause}
		</if>
	</select>
	
	<select id="count" resultType="Integer" parameterType="Dept">
		select
		count(id)
		from SYS_DEPT
		<include refid="where" />
	</select>

	<insert id="insert" parameterType="Dept" >
		<selectKey keyProperty="id" resultType="Integer" order="BEFORE">
			select
			SEQUENCE_SYS_DEPT.nextval from dual
		</selectKey>
		insert into SYS_DEPT
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				ID,
			</if>
			<if test="name != null">
				DEPT_NAME,
			</if>
			<if test="address != null">
				ENTERPRISE_ID,
			</if>
			<if test="address != null">
				TYPE,
			</if>
			<if test="enabled != null">
				enabled,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="name != null">
				#{deptName,jdbcType=VARCHAR},
			</if>
			<if test="address != null">
				#{enterpriseID},
			</if>
			<if test="address != null">
				#{type},
			</if>
			<if test="enabled != null">
				#{enabled},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="Dept">
		update SYS_DEPT
		<set>
			<if test="deptName != null">
				 DEPT_NAME = #{deptName,jdbcType=VARCHAR},
			</if>
			<if test="enterpriseID != null">
				 ENTERPRISE_ID = #{enterpriseID},
			</if>
			<if test="type != null">
				 TYPE = #{type},
			</if>
			<if test="enabled != null">
				 enabled = #{enabled},
			</if>
		</set>
		where ID = #{id}
	</update>
</mapper>